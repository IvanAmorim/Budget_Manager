<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/listAccountFragment">

    <fragment
        android:id="@+id/listAccountFragment"
        android:name="com.pm.budgetmanager.fragments.Account.ListAccountFragment"
        android:label="fragment_list_account"
        tools:layout="@layout/fragment_list_account" >
        <action
            android:id="@+id/action_listAccountFragment_to_addAccountFragment"
            app:destination="@id/addAccountFragment" />
        <action
            android:id="@+id/action_listAccountFragment_to_listTransactionsFragment"
            app:destination="@id/listTransactionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addAccountFragment"
        android:name="com.pm.budgetmanager.fragments.Account.addAccountFragment"
        android:label="fragment_add_account"
        tools:layout="@layout/fragment_add_account" >
        <action
            android:id="@+id/action_addAccountFragment_to_listAccountFragment"
            app:destination="@id/listAccountFragment" />
    </fragment>
    <fragment
        android:id="@+id/listTransactionsFragment"
        android:name="com.pm.budgetmanager.fragments.Transaction.ListTransactionsFragment"
        android:label="fragment_list_transactions"
        tools:layout="@layout/fragment_list_transactions" >
        <action
            android:id="@+id/action_listTransactionsFragment_to_listAccountFragment"
            app:destination="@id/listAccountFragment" />
    </fragment>
</navigation>